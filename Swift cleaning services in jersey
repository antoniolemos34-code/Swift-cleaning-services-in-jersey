  <!-- CHAT WIDGET -->
  <div class="chat-widget-btn" id="chat-toggle">
    <i class="fa-solid fa-comments"></i>
    Chat with us
  </div>

  <div class="chat-panel" id="chat-panel">
    <div class="chat-panel-header">
      <div>
        <h4>Need a quick answer?</h4>
        <span>Choose how you want to chat.</span>
      </div>
      <button class="chat-close" id="chat-close">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <div class="chat-panel-body">
      We usually reply fastest on Facebook Messenger and WhatsApp during opening hours.
    </div>
    <div class="chat-actions">
      <button type="button" onclick="openMessenger()">
        <span><i class="fa-brands fa-facebook-messenger"></i> Messenger</span>
        <i class="fa-solid fa-arrow-up-right-from-square"></i>
      </button>
      <button type="button" onclick="openWhatsApp()">
        <span><i class="fa-brands fa-whatsapp"></i> WhatsApp</span>
        <i class="fa-solid fa-arrow-up-right-from-square"></i>
      </button>
      <button type="button" onclick="openEmail()">
        <span><i class="fa-regular fa-envelope"></i> Email</span>
        <i class="fa-solid fa-arrow-up-right-from-square"></i>
      </button>
    </div>
  </div>

  <script>
    // Ano automático no footer
    document.getElementById("year").textContent = new Date().getFullYear();

    // CHAT WIDGET
    const chatToggle = document.getElementById("chat-toggle");
    const chatPanel = document.getElementById("chat-panel");
    const chatClose = document.getElementById("chat-close");

    chatToggle.addEventListener("click", () => {
      chatPanel.style.display = chatPanel.style.display === "block" ? "none" : "block";
    });

    chatClose.addEventListener("click", () => {
      chatPanel.style.display = "none";
    });

    // LIGAÇÕES – TROCAR PLACEHOLDERS PELOS DADOS REAIS
    const FB_USERNAME = "YOUR_FACEBOOK_USERNAME"; // <-- muda para o username da página
    const WHATSAPP_NUMBER = "440000000000";       // <-- só números, com indicativo do país
    const BOOKING_EMAIL = "info@companyname.je";  // <-- muda para o email real

    function openMessenger() {
      window.open(`https://m.me/${FB_USERNAME}`, "_blank");
    }

    function openWhatsApp() {
      const msg = encodeURIComponent("Hi! I would like to ask about availability and prices.");
      window.open(`https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`, "_blank");
    }

    function openEmail() {
      const subject = encodeURIComponent("Booking enquiry");
      const body = encodeURIComponent("Hi! I would like to ask about availability and prices for:");
      window.location.href = `mailto:${BOOKING_EMAIL}?subject=${subject}&body=${body}`;
    }

    // Enviar mensagem a partir do formulário abrindo o Messenger
    function openMessengerFromForm() {
      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const message = document.getElementById("message").value.trim();

      const text = encodeURIComponent(
        `Hi! My name is ${name || "…"}. Email: ${email || "not provided"}.\n\nMessage:\n${message || "Booking enquiry."}`
      );

      window.open(`https://m.me/${FB_USERNAME}?ref=${text}`, "_blank");
    }
  </script>
</body>
